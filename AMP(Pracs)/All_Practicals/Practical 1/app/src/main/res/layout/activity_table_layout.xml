<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1,2,3"


    tools:context=".Prac4.TableLayoutActivity">

    <TableRow>
        <TextView android:text="Sr.no"
            android:textStyle="bold"
            android:layout_column="0"
            />

        <TextView android:text="Car Name"
            android:textStyle="bold"
            android:layout_column="1"
            />
        <TextView android:text="Car brand"
            android:textStyle="bold"
            android:layout_column="2"
            />

        <TextView android:text="Car Price"
            android:textStyle="bold"
            android:layout_column="3"
            />

    </TableRow>

    <TableRow>
        <TextView android:text="1"
            android:id="@+id/tvSrno1"
            android:layout_column="0"
            />

        <TextView android:text="Car Name"

            android:layout_column="1"
            />
        <TextView android:text="Car brand"
            android:textStyle="bold"
            android:layout_column="2"
            />

        <TextView android:text="Car Price"
            android:textStyle="bold"
            android:layout_column="3"
            />

    </TableRow>

    <TableRow>
        <TextView android:text="2"

            android:id="@+id/tvSrno2"
            android:layout_column="0"
            />

        <TextView android:text="Car Name"

            android:layout_column="1"
            />
        <TextView android:text="Car brand"

            android:layout_column="2"
            />

        <TextView android:text="Car Price"

            android:layout_column="3"
            />

    </TableRow>
    <TableRow>
        <TextView android:text="3"
            android:id="@+id/tvSrno3"

            android:layout_column="0"
            />

        <TextView android:text="Car Name"

            android:layout_column="1"
            />
        <TextView android:text="Car brand"

            android:layout_column="2"
            />

        <TextView android:text="Car Price"

            android:layout_column="3"
            />

    </TableRow>


</TableLayout>